---
import BaseLayout from "./BaseLayout.astro";
import ContentLayout from "./ContentLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title}>
    <ContentLayout ariaLabel="Introduction">
        <div class="hero-intro">
            <h1>{frontmatter.client}</h1>
            <p class="body-display large">{frontmatter.intro}</p>
        </div>
    </ContentLayout>

    <ContentLayout ariaLabel="Overview">
        <div class="subtitle" aria-hidden="true">Overview</div>
        <div class="overview-wrapper">
            <h2 class="section">{frontmatter.overviewTitle}</h2>
            <p class="body-display dual-paragraph">
                {frontmatter.overviewDescription}
            </p>
        </div>
    </ContentLayout>
    <ContentLayout ariaLabel="The Problem">
        <div class="image-content">
            <img src={frontmatter.heroImage.url}/>
            <div>
                <div class="subtitle" aria-hidden="true">The Problem</div>
                <h2 class="section">Problem Statement</h2>
                <p class="body-display">{frontmatter.problemStatement}</p>
            </div>
        </div>
    </ContentLayout>
    <slot />
</BaseLayout>

<style>
    .hero-intro {
        padding-top: 128px;
        padding-bottom: 64px;
        justify-items: center;
        text-align: center;
    }
    .image-content {
        display: grid;
        padding: 2rem;
        grid-template-columns: 300px 1fr;
        gap: 1rem;
        align-items: center;
        margin: 0 auto;
        font: 500 100%/1.5 system-ui;
    }
    img {
        max-width: 100%;
        height: auto;
    }
</style>
